#include<stdio.h>

double power(double base, double expo){
	if(expo == 0.0){
		return 1.0;
	}
	return base*power(base, expo-1);
}

void main(){
	double base, expo;
	printf("Enter the base and the exponent:\n");
	scanf("%lf %lf", &base, &expo);

	printf("%lf raised to %lf is %lf\n", base, expo, power(base, expo));
}
